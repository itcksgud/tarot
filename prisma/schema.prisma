generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  order     Int
  title     String
  nickname  String
  lock      String
  password  String
  content   String
  numbers   Int[]    // 배열 형태
  answer    String?  // null일 수 있으므로 optional
}